@import '/static/iconfont/iconfont';

.c-navbar{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    display: flex;
    height: 100rpx;
    background: #fff;
}
.c-navbar .group-menu{
    flex: 1;
}
.c-navbar .flex2{
    flex: 2;
}
.c-navbar .group-menu .item{
    width: 33.33%;
    float: left;
    padding: 10rpx 0 0;
    text-align: center;
}
.c-navbar .group-menu .iconfont{
    color: #999;
    font-size: 40rpx;
}
.c-navbar .active .title{
    color: #ef4f4f !important;
}
.c-navbar .active .iconfont{
    color: #ef4f4f !important;
}
.c-navbar .group-menu .title{
    color: #999;
    font-size: 24rpx;
    margin: 4rpx 0 0;
}
.c-navbar .group-menu .icon{
    width: 40rpx;
    margin: 0 auto;
    position: relative;
}
.c-navbar .group-menu .dot{
    width: 32rpx;
    height: 32rpx;
    line-height: 32rpx;
    position: absolute;
    top: -10rpx;
    z-index: 99;
    right: -14rpx;
    color: #fff;
    font-weight: 600;
    font-size: 24rpx;
    border-radius: 50%;
    background: #ff0011;
}
.c-navbar .group-btn{
    flex: 1;
    display: flex;
}
.c-navbar .group-btn .addCar{
    flex: 1;
    color: #fff;
    font-size: 26rpx;
    text-align: center;
    line-height: 100rpx;
    display: table-cell;
    background: #fe9402;
    vertical-align: middle;
}
.c-navbar .group-btn .goBuy{
    flex: 1;
    color: #fff;
    font-size: 26rpx;
    text-align: center;
    line-height: 100rpx;
    display: table-cell;
    background: #fd5555;
    vertical-align: middle;
}