.c-pictures{
    overflow: hidden;
}
.c-pictures .list{
    overflow: hidden;
}
.c-pictures .list .item{
    width: 33.33%;
    float: left;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    padding: 0 10rpx;
    margin: 0 0 10rpx;
}
.c-pictures .rownum1 .item{
    width: 100%;
}
.c-pictures .rownum2 .item{
    width: 50%;
}
.c-pictures .rownum4 .item{
    width: 25%;
}
.c-pictures .rownum5 .item{
    width: 20%;
}
.c-pictures .item .picture{
    position: relative;
}
.c-pictures .item .picture .img{
    width: 100%;
    height: 230rpx;
}
.c-pictures .rownum1 .picture .img{
    height: 730rpx;
}
.c-pictures .rownum2 .picture .img{
    height: 354rpx;
}
.c-pictures .rownum4 .picture .img{
    height: 168rpx;
}
.c-pictures .rownum5 .picture .img{
    height: 130rpx;
}
.c-pictures .line .item{
    min-width: 250rpx;
}
.c-pictures .line.rownum1 .item{
    min-width: 730rpx;
}
.c-pictures .line.rownum2 .item{
    min-width: 375rpx;
}
.c-pictures .line.rownum4 .item{
    min-width: 188rpx;
}
.c-pictures .line.rownum5 .item{
    min-width: 130rpx;
}
.c-pictures .item .picture .caption{
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 56rpx;
    color: #fff;
    font-size: 28rpx;
    line-height: 56rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    background: -webkit-linear-gradient(to top, rgba(0,0,0,0.6) 0%,rgba(0,0,0,0) 100%);
    background: linear-gradient(to top, rgba(0,0,0,0.6) 0%,rgba(0,0,0,0) 100%);
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr=#00000000, endColorstr=#99000000,gradientType='0');
}
.c-pictures .item .title{
    height: 40rpx;
    line-height: 40rpx;
    font-size: 28rpx;
    color: #999;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.c-pictures .list.line{
    display: flex;
    overflow-x: auto;
    align-items: center;
}