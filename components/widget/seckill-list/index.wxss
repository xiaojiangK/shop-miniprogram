.c-list{
    background: #fff;
}
.c-list .head{
    height: 60rpx;
    padding: 0 24rpx;
    line-height: 60rpx;
    overflow: hidden;
    background: #f0f2f5;
}
.c-list .head .left{
    float: left;
    color: #666;
    font-size: 26rpx;
}
.c-list .head .right{
    float: right;
    color: #f94744;
    font-size: 24rpx;
    padding: 0 20rpx 0 0;
}
.c-list .head .right .dot{
    margin: 0 6rpx;
}
.c-list .head .right .num{
    background: #fc664c;
    color: #fff;
    width: 38rpx;
    height: 30rpx;
    padding: 0 8rpx;
    border-radius: 4rpx;
    line-height: 30rpx;
    text-align: center;
    background: linear-gradient(to right, #fdad89 0%,#f94444 100%);
    background: -webkit-linear-gradient(left, #fdad89 0%,#f94444 100%);
}
.c-list .list .item{
    padding: 20rpx 40rpx 20rpx 20rpx;
}
.c-list .list .item .picture{
    width: 200rpx;
    padding: 0 20rpx 0 0;
    display: table-cell;
    vertical-align: middle;
}
.c-list .item .picture .img{
    width: 100%;
    height: 200rpx;
}
.c-list .item .content{
    display: table-cell;
    vertical-align: middle;
}
.c-list .item .title{
    color: #666;
    height: 72rpx;
    overflow: hidden;
    font-size: 26rpx;
    line-height: 36rpx;
    margin: 0 0 16rpx;
}
.c-list .item .price-box{
    overflow: hidden;
}
.c-list .item .price-box .price{
    float: left;
    color: #ff5555;
    font-size: 32rpx;
    vertical-align: middle;
}
.c-list .item .price-box .btn{
    width: 124rpx;
    height: 52rpx;
    color: #fff;
    float: right;
    font-size: 24rpx;
    line-height: 52rpx;
    text-align: center;
    border-radius: 8rpx;
    background: #eb6060;
}
.c-list .item .state{
    overflow: hidden;
}
.c-list .item .state .old-cost{
    float: left;
    color: #b3b3b3;
    font-size: 24rpx;
    line-height: 50rpx;
    text-decoration: line-through;
}
.c-list .item .status{
    float: right;
}
.c-list .item .status .text{
    color: #d0d1d2;
    font-size: 24rpx;
}
.c-list .item .status .num{
    color: #ff5555;
    margin: 0 10rpx;
}
.c-list .item .progress{
    width: 152rpx;
    height: 10rpx;
    overflow: hidden;
    background: #f0f2f5;
    border-radius: 20rpx;
    display: inline-block;
    vertical-align: middle;
}
.c-list .item .progress .active{
    width: 50%;
    height: 10rpx;
    background: #ffd1d1;
    border-radius: 20rpx;
}
.c-list .await .price-box .btn{
    background: #ff8753; 
}
.c-list .success .price-box .btn{
    color: #6f6f6f;
    background: #f2f2f2; 
}
.c-list .success .progress .active{
    width: 100%;
}
.c-list .await .status{
    display: none;
}