<view class="fui-cell-group fui-sale-group" style="margin-top:0;min-height:100%;">
  <view class="fui-cell" wx:if="{{type == 'region'}}">
    <view class="fui-cell-text dispatching" style="width:100%;">
      不配送区域:
      <view class="dispatching-info">
        <block wx:for="{{region}}" wx:key="index" wx:for-index="idx" wx:for-item="reg">
          <text>{{reg}}</text>
        </block>
      </view>
    </view>
  </view>
  <view class="fui-cell" wx:else>
    <view class="fui-cell-text dispatching" style="width:100%;">
      配送区域:
      <view class="dispatching-info">
        <block wx:for="{{region}}" wx:key="index" wx:for-index="idx" wx:for-item="reg">
          <text>{{reg}}</text>
        </block>
      </view>
    </view>
  </view>
</view>